<?xml version='1.0' encoding='utf-8'  ?>
<odoo>

    <record id="view_send_wizard_form" model="ir.ui.view">
        <field name="name">view.send.wizard.form</field>
        <field name="model">send.mail.order.wizard</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <group>
                    <field name="bc_id" invisible="1"/>
                    <field name="subject" />
                    <field name="message" />
                </group>
                 <footer>
                     <button name="send" type="object" string="Envoyer" class="btn-primary"/>
                 </footer>

            </form>
        </field>
    </record>

    <record id="send_order_wizard_action" model="ir.actions.act_window">
        <field name="name">Envoyer un mail</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">send.mail.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_send_wizard_form"/>
    </record>
</odoo>