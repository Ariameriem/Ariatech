<?xml version='1.0' encoding='utf-8'  ?>
<odoo>

    <record id="view_refuse_wizard_form" model="ir.ui.view">
        <field name="name">view.refuse.wizard.form</field>
        <field name="model">refuse.order.wizard</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <group>
                    <field name="bc_id" invisible="1"/>
                    <field name="reason_refusal" string="Commentaire"/>
                </group>
                 <footer>
                     <button name="refuse" type="object" string="Refuser" class="btn-primary"/>
                 </footer>

            </form>
        </field>
    </record>

    <record id="refuse_order_wizard_action" model="ir.actions.act_window">
        <field name="name">Forme de refus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">refuse.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_refuse_wizard_form"/>
    </record>
</odoo>